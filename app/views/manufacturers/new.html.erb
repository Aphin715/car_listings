<h1>Add a New Manufacurer</h1>

<%= form_for @manufacturer do |f| %>
  <%- if @manufacturer.errors.size > 0 -%>
  <ul class="errors">
    <%- @manufacturer.errors.full_messages.each do |error| -%>
      <li><%= error %></li>
    <%- end -%>
  </ul>
<%- end -%>


  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div>
    <%= f.label :country %>
    <%= f.text_field :country %>
  </div>

    <div>
    <%= f.submit 'Record' %>
    </div>

<% end %>

