<h1>Add a New Car</h1>

<%= form_for @car do |f| %>
  <% if @car.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@car.errors.count, "error") %> prohibited this car from being saved:</h2>

      <ul>
      <% @car.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= f.label :color %>
    <%= f.text_field :color %>
  </div>

  <div>
    <%= f.label :mileage %>
    <%= f.number_field :mileage %>
  </div>

  <div>
    <%= f.label :year %>
    <%= f.number_field :year, :placeholder => 'Newer than 1980'%>
  </div>

  <div>
    <%= f.label :description %>
    <%= f.text_field :description %>
  </div>
  <div>
    <%= f.label :manufacturer_id %>
    <%= f.collection_select :manufacturer_id, Manufacturer.all, :id, :name, include_blank:true %>
  </div>

  <div>
    <%= f.submit 'Record' %>
  </div>

<%- end -%>
